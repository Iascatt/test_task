<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EMTestTask" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green</item>
        <item name="colorSecondaryVariant">@color/dark_green</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:windowBackground">@color/black</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/background</item>
        <!-- Customize your theme here. -->

        <item name="android:fontFamily">@font/sf_pro_display</item>

    </style>

    <style name="BottomNavigationViewStyle" parent="Widget.Design.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_nav_item_color</item>
        <item name="itemTextColor">@color/bottom_nav_item_color</item>
        <item name="android:textSize">@dimen/navbar_label_size</item>
        <item name="borderWidth">1dp</item>
        <item name="android:font">@font/sf_pro_display_regular</item>
    </style>

    <style name="SearchBarStyle">
        <item name="itemIconTint">@color/bottom_nav_item_color</item>
        <item name="itemTextColor">@color/bottom_nav_item_color</item>
        <item name="android:textSize">@dimen/navbar_label_size</item>
        <item name="android:font">@font/sf_pro_display_regular</item>
    </style>

    <style name="ScreenMargin">
        <item name="android:layout_marginTop">48dp</item>
        <item name="android:layout_marginBottom">48dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="AccentText">
        <item name="android:font">@font/sf_pro_display_regular</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">@dimen/small_text_size</item>

    </style>

    <style name="VacancyCardStyle">
        <item name="backgroundColor">@color/grey_1</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>
    <style name="VacancyTitleStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:font">@font/sf_pro_display_medium</item>
        <item name="android:textSize">@dimen/medium_text_size</item>

    </style>
    <style name="BasicTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:font">@font/sf_pro_display_regular</item>
        <item name="android:textSize">@dimen/small_text_size</item>

    </style>

    <style name="SecondaryTextStyle">
        <item name="android:textColor">@color/grey_3</item>
        <item name="android:font">@font/sf_pro_display_regular</item>
        <item name="android:textSize">@dimen/small_text_size</item>

    </style>

    <style name="LargeTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:font">@font/sf_pro_display_semibold</item>
        <item name="android:textSize">@dimen/title_size</item>

    </style>
    <style name="OfferCardStyle">
        <item name="background">@color/grey_1</item>
    </style>
</resources>